<!-- res/layout/item_list.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <!-- Imagen -->

    <!-- Contenedor para el nombre y el autor -->
    <ImageView
        android:id="@+id/songImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/song_portrait_sample"
        android:contentDescription="song portrait" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre -->
        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Autor -->
        <TextView
            android:id="@+id/songAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Author"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- BotÃ³n con imagen -->
    <ImageButton
        android:id="@+id/itemButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/favorite"
        android:src="@drawable/song_favorite_border"
        tools:ignore="ImageContrastCheck" />
</LinearLayout>
