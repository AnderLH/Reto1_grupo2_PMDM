<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Sección de Filtro en la parte superior -->
    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Campo de búsqueda -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:hint="Buscar"
            android:inputType="text"
            android:minHeight="48dp" />

        <!-- Botón con menú desplegable de opciones -->
        <Button
            android:id="@+id/optionsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:contentDescription="Opciones" />
    </LinearLayout>

    <!-- Sección de Listas con RecyclerView en el centro -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songs_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/top_section"
        android:layout_above="@+id/menu_section"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_weight="1"/>

    <!-- Sección de Menú Rápido en la parte inferior -->
    <LinearLayout
        android:id="@+id/menu_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Botón 1 del Menú Rápido -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Botón 1"
            android:src="@android:drawable/ic_media_previous"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Botón 2 del Menú Rápido -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Botón 2"
            android:src="@android:drawable/ic_media_pause" />

        <!-- Botón 3 del Menú Rápido -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Botón 3"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>
</RelativeLayout>